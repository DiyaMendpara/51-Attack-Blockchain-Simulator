# Cloud Configuration Environment Variables
# Copy this file to .env and configure your cloud settings

# =============================================================================
# CLOUD STORAGE CONFIGURATION
# =============================================================================

# Cloud Storage Provider (aws, azure, gcs, local)
CLOUD_STORAGE_PROVIDER=local

# Cloud Storage Bucket/Container Name
CLOUD_STORAGE_BUCKET=blockchain-simulator

# Cloud Storage Region
CLOUD_STORAGE_REGION=us-east-1

# =============================================================================
# AWS CONFIGURATION
# =============================================================================

# AWS Access Credentials
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1

# =============================================================================
# AZURE CONFIGURATION
# =============================================================================

# Azure Storage Connection String
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your_account;AccountKey=your_key;EndpointSuffix=core.windows.net

# =============================================================================
# GOOGLE CLOUD CONFIGURATION
# =============================================================================

# Google Cloud Project ID
GCP_PROJECT_ID=your-gcp-project-id

# Google Cloud Service Account Key (JSON content)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# =============================================================================
# CLOUD MONITORING CONFIGURATION
# =============================================================================

# Cloud Monitoring Provider (aws, azure, gcs, local)
CLOUD_MONITORING_PROVIDER=local

# Cloud Monitoring Namespace
CLOUD_MONITORING_NAMESPACE=BlockchainSimulator

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=false

# Ethereum Configuration
ETH_RPC_URL=http://hardhat-node:8545
ETH_PRIVATE_KEY=your_private_key_here
ETH_SENDER_ADDRESS=your_address_here

# Indexer Configuration
INDEXER_RPC_URL=http://hardhat-node:8545
INDEXER_PORT=3001
INDEXER_DB_PATH=/app/indexer/indexer.db

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Docker Registry (for production deployment)
DOCKER_REGISTRY=your-registry.com
DOCKER_IMAGE_TAG=latest

# =============================================================================
# KUBERNETES CONFIGURATION
# =============================================================================

# Kubernetes Namespace
K8S_NAMESPACE=blockchain-simulator

# Kubernetes Resource Limits
K8S_CPU_LIMIT=1000m
K8S_MEMORY_LIMIT=1Gi
K8S_CPU_REQUEST=250m
K8S_MEMORY_REQUEST=256Mi

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log Format
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Secret Key for Flask Sessions
SECRET_KEY=your-secret-key-here

# CORS Origins (comma-separated)
CORS_ORIGINS=*

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Simulation Parameters
DEFAULT_SIMULATION_RUNS=1000
MAX_SIMULATION_RUNS=10000

# Blockchain Parameters
DEFAULT_DIFFICULTY_PREFIX=0000
DEFAULT_MINING_REWARD=1

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Backup Frequency (in hours)
BACKUP_FREQUENCY=24

# Backup Retention (in days)
BACKUP_RETENTION=30

# =============================================================================
# ALERTING CONFIGURATION
# =============================================================================

# Alert Thresholds
ALERT_HIGH_ATTACK_PROBABILITY=0.5
ALERT_LOW_BALANCE_THRESHOLD=0.1

# Notification Settings
NOTIFICATION_EMAIL=admin@example.com
NOTIFICATION_SLACK_WEBHOOK=https://hooks.slack.com/services/your/webhook/url
